<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.dao.mappers.UserInformationMapper">
    <resultMap id="BaseResultMap" type="app.dao.entities.UserInformation">
        <id column="userId" jdbcType="VARCHAR" property="userId"/>
        <result column="userName" jdbcType="VARCHAR" property="userName"/>
        <collection property="sysRoles" javaType="java.util.List" ofType="app.dao.entities.SysRole">
            <id column="roleId" jdbcType="VARCHAR" property="roleId"/>
            <result column="roleName" jdbcType="VARCHAR" property="roleName"/>
            <result column="orderNum" jdbcType="NUMERIC" property="orderNum"/>
        </collection>
    </resultMap>

    <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
            t1.user_id,
            t1.user_name,
            t3.role_id,
            t3.role_name,
            t3.order_num
        FROM
            sys_user t1
            LEFT OUTER JOIN sys_user_role_rel t2 ON t1.user_id = t2.user_id
            INNER JOIN sys_role t3 ON t2.role_id = t3.role_id
        WHERE
            t1.user_id = #{userId,jdbcType=VARCHAR}
    </select>
</mapper>